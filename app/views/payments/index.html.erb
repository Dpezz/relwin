<% content_for :title do %>Formas de Pago<% end %>
<% content_for :menu_config do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Formas de Pago</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each.with_index(1) do |payment,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= payment.name %></td>
        <td><%= payment.description %></td>
        <td>
        <%= link_to '', payment, class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', edit_payment_path(payment) , class: 'glyphicon glyphicon-edit text-info'%>&nbsp;
        <%= link_to '', payment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'New Payment', new_payment_path, class: 'btn btn-primary' %>
</div>

