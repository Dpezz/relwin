<% content_for :title do %>Precios<% end %>
<% content_for :menu_products do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Producto <i class="fa fa-angle-right"></i> <small>Precios</small></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Product</th>
      <th>Cost</th>
      <th>Venta</th>
      <th>Total</th>
      <th>Margen</th>
      <th>Taxes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each.with_index(1) do |price,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= price.product.name %></td>
        <td><%= number_to_currency(price.buy_p, precision: 0)  %></td>
        <td><%= number_to_currency(price.sale_p, precision: 0) %></td>
        <td><%= number_to_currency(price.total_p, precision: 0) %></td>
        <td><%= number_to_percentage(price.return, precision: 0) %></td>
        <td><%= number_to_percentage(price.taxes, precision: 0) %></td>
        <td>
        <%= link_to '', product_price_path(price.product,price), class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', edit_product_price_path(price.product,price), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
        <%= link_to '', product_price_path(price.product,price), method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Volver', products_path(@product), class: 'btn btn-default' %>
  <%= link_to 'New Product', new_product_price_path(@product), class: 'btn btn-primary' %>
</div>

