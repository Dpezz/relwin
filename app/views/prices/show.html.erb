<% content_for :title do %>Precio<% end %>
<% content_for :menu_products do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Producto <i class="fa fa-angle-right"></i> <small>Precio</small></h1>

<p>
  <strong>Product:</strong>
  <%= @price.product.name %>
</p>

<p>
  <strong>Costo:</strong>
  <%= number_to_currency(@price.buy_p, precision: 0) %>
</p>

<p>
  <strong>Venta:</strong>
  <%= number_to_currency(@price.sale_p, precision: 0) %>
</p>

<p>
  <strong>Total:</strong>
  <%= number_to_currency(@price.total_p, precision: 0) %>
</p>

<p>
  <strong>Margen:</strong>
  <%= number_to_percentage(@price.return, precision: 0) %>
</p>

<p>
  <strong>Taxes:</strong>
  <%= number_to_percentage(@price.taxes, precision: 0) %>
</p>

<%= link_to 'Edit', edit_product_price_path(@product,@price) %> |
<%= link_to 'Back', products_path %>
