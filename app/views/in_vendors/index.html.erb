<% content_for :title do %>Vendedores<% end %>
<% content_for :menu_sales do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Inicio de Vendedores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Vendor</th>
      <th>Start date</th>
      <th>Total p</th>
      <th>End date</th>
      <th>Is active</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @in_vendors.each.with_index(1) do |in_vendor,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= in_vendor.vendor.name %></td>
        <td><%= in_vendor.start_date.strftime('%F %H:%M') %></td>
        <td><%= number_to_currency(in_vendor.total_p, precision: 0) %></td>
        <td><%= in_vendor.end_date.strftime('%F %H:%M') %></td>
        <td><%= in_vendor.is_active %></td>
        <td><%= in_vendor.user.username %></td>
        <td>
        <%= link_to '', in_vendor, class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', edit_in_vendor_path(in_vendor), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
        <%= link_to '', in_vendor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'New In vendor', new_in_vendor_path, class: 'btn btn-primary' %>
</div>


