<% content_for :title do %>Contraseña<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Contraseña</h1>

<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for :users, :html => { :method => 'post' }, :url => password_update_path(current_user) do |f| %>

  <div class="form-group">
    <%= f.label :password, "Nueva Password" %><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar Password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="modal-footer">
    <%= link_to "Cuenta", account_path(current_user), class: 'btn btn-default' %>
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>

<% end %>