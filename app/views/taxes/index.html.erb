<% content_for :title do %>Impuestos<% end %>
<% content_for :menu_config do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Impuestos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Valor</th>
      <th>Descripci√≥n</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxes.each.with_index(1) do |tax,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= tax.name %></td>
        <td><%= number_to_percentage(tax.value, precision:0) %></td>
        <td><%= tax.description %></td>
        <td>
        <%= link_to '', tax, class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', edit_tax_path(tax), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
        <%= link_to '', tax, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Nuevo', new_tax_path, class: 'btn btn-primary' %>
</div>


