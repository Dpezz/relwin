<p id="notice"><%= notice %></p>

<h1 class="page-header">Listing Taxes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Product</th>
      <th>Name</th>
      <th>Cantidad</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxes.each.with_index(1) do |tax,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= tax.product.name %></td>
        <td><%= tax.name %></td>
        <td><%= tax.cantidad %>%</td>
        <td><%= tax.description %></td>
        <td>
        <%= link_to '', product_tax_path(tax.product,tax), class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', edit_product_tax_path(tax.product,tax), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
        <%= link_to '', product_tax_path(tax.product,tax), method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Volver', products_path, class: 'btn btn-default' %>
  <%= link_to 'New Tax', new_product_tax_path(@product), class: 'btn btn-primary' %>
</div>


