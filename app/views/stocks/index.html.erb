<% content_for :title do %>Bodegas<% end %>
<% content_for :menu_products do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Bodegas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Descripción</th>
      <th>Activo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each.with_index(1) do |stock,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= stock.name %></td>
        <td><%= stock.address %></td>
        <td><%= stock.description %></td>
        <td><%= stock.is_active %></td>
        <td><%= stock.user.username %></td>
        <td>

        <%= link_to '', stock, class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', instock_path(stock), class: 'glyphicon glyphicon-shopping-cart' %>&nbsp;
        <% if stock.name.downcase != "default" %>
          <%= link_to '', edit_stock_path(stock), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
          <%= link_to '', stock, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Nuevo', new_stock_path, class: 'btn btn-primary' %>
</div>


