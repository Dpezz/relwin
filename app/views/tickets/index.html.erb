<% content_for :title do %>Facturas<% end %>
<% content_for :menu_orders do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Facturas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Code</th>
      <th>Price</th>
      <th>Payment</th>
      <th>date</th>
      <th>Note</th>
      <th>is Active</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each.with_index(1) do |ticket,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= ticket.code %></td>
        <td><%= number_to_currency(ticket.price, precision: 0) %></td>
        <td><% if ticket.payment %><%= ticket.payment.name %><% end %></td>
        <td><%= ticket.date.strftime('%F %H:%M') %></td>
        <td><%= ticket.note %></td>
        <td><%= ticket.is_active %></td>
        <td><%= ticket.user.username %></td>
        <td>
        <%= link_to '', ticket, class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', edit_ticket_path(ticket), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
        <%= link_to '', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'New Ticket', new_ticket_path, class: 'btn btn-primary' %>
</div>

