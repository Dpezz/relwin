<% content_for :title do %>Cajas<% end %>
<% content_for :menu_sales do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Cajas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terminals.each.with_index(1) do |terminal,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= terminal.name %></td>
        <td><%= terminal.description %></td>
        <td><%= terminal.user.username %></td>
        <td>
        <%= link_to '', terminal, class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', edit_terminal_path(terminal), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
        <%= link_to '', terminal, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Nuevo', new_terminal_path, class: 'btn btn-primary' %>
</div>


