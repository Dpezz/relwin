<%= form_for(@buy) do |f| %>
  <% if @buy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@buy.errors.count, "error") %> prohibited this buy from being saved:</h2>

      <ul>
      <% @buy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, 'Fecha' %><br>
    <%= f.date_select :date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price, 'Valor' %><br>
    <%= f.number_field :price, class: 'form-control', readonly: ''%>
  </div>
  <div class="form-group">
    <%= f.label :ticket_id, 'Factura' %><br>
    <%= f.select :ticket_id, @tickets.map{ |c| [c.code, c.id] }, { include_blank: "Select Ticket" }, 
    { :class => 'form-control'} %>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>
