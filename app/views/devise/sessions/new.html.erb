<% content_for :title do %>LogIn<% end %>

<% content_for :content do %>
  <%= stylesheet_link_tag 'signin'%>

  <div class="container">
    <%= form_for(resource, as: resource_name, html: { :class => 'form-signin'}, url: session_path(resource_name)) do |f| %>
      <%= image_tag "logo.png", :alt => "Google +", :title => "Google +", :width => '300' %>
      <hr>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Iniciar SesiÃ³n", class: 'btn btn-primary btn-block btn-lg' %>
      </div>

      <hr>
      <%= render "devise/shared/links" %>
    <% end %>
    
  </div>
<% end %>


