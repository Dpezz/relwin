<% content_for :title do %>Productos<% end %>
<% content_for :menu_products do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Producto <i class="fa fa-angle-right"></i> <small>Stocks</small></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Producto</th>
      <th>Stock</th>
      <th>Unidad</th>
      <th>Limite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @in_stocks.each.with_index(1) do |in_stock,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= in_stock.product.name %></td>
        <td><% if in_stock.stock %><%= in_stock.stock.name %><% end %></td>
        <td><%= in_stock.unit %></td>
        <td><%= in_stock.limit %></td>
        <td>
        <%= link_to '', product_in_stock_path(in_stock.product,in_stock), class: 'glyphicon glyphicon-eye-open' %>
        <%= link_to '', edit_product_in_stock_path(in_stock.product,in_stock), class: 'glyphicon glyphicon-edit text-info' %>
        <%= link_to '', product_in_stock_path(in_stock.product,in_stock), method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Volver', products_path, class: 'btn btn-default' %>
  <%= link_to 'Nuevo', new_product_in_stock_path(@product), class: 'btn btn-primary' %>
</div>

