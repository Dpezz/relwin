<%= form_for([@product,@in_stock]) do |f| %>
  <% if @in_stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@in_stock.errors.count, "error") %> prohibited this in_stock from being saved:</h2>

      <ul>
      <% @in_stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :stock_id, 'Stock' %><br>
    <%= f.select :stock_id, @stocks.map{ |c| [c.name, c.id] }, { include_blank: "Select Stock" },
     { :class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :unit, 'Unidades' %><br>
    <%= f.number_field :unit, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :limit, 'Unidades Limite' %><br>
    <%= f.number_field :limit, class: 'form-control' %>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>
