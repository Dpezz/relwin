<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code %><br>
    <%= f.text_field :code, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.select :status_id, @statuses.map{ |c| [c.name, c.id] }, { include_blank: "Select Status" },
     { :class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: 'form-control', readonly: ''%>
  </div>

  <div class="form-group">
    <%= f.label :ticket %><br>
    <%= f.select :ticket_id, @tickets.map{ |c| [c.code, c.id] }, { include_blank: "Select Ticket" },
     { :class => 'form-control'} %>
  </div>

  <div class="modal-footer">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
