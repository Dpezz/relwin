<% content_for :title do %>Pedidos<% end %>
<% content_for :menu_orders do %>class ="active"<% end %>

<p id="notice"><%= notice %></p>

<h1 class="page-header">Pedidos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>CÃ³digo</th>
      <th>Estado</th>
      <th>Valor</th>
      <th>Factura</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each.with_index(1) do |order,index| %>
      <tr>
        <td><span class="badge"><%= index %></span></td>
        <td><%= order.code %></td>
        <td><% if order.status %><%= order.status.name %><% end %></td>
        <td><%= number_to_currency(order.price, precision: 0) %></td>
        <td><% if order.ticket %><%= order.ticket.code %><% end %></td>
        <td><%= order.user.username %></td>
        <td>
        <%= link_to '', order, class: 'glyphicon glyphicon-eye-open' %>&nbsp;
        <%= link_to '', order_in_orders_path(order), class: 'glyphicon glyphicon-shopping-cart' %>&nbsp;
        <%= link_to '', edit_order_path(order), class: 'glyphicon glyphicon-edit text-info' %>&nbsp;
        <%= link_to '', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Nuevo', new_order_path, class: 'btn btn-primary' %>
</div>

